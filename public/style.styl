$accentColor = #D11E48
$blackColor = #334
$grayColor = #667

body 
	font-family 'Trebuchet MS'
	margin 0
	padding 0
		

h1 
	text-align center
	
h2
	text-align left
	margin 0 0 5px
	
form
	display none
	
.content 
	width 620px
	margin 0 auto 30px
	font-style 1em
	background-color white
	padding 20px
	box-shadow: 0 4px 5px 2px rgba(0,0,0,0.2);
	
	
.header 
	background-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAATklEQVQYV2O0O3X+PwMDA8MhM0NGEI0LMBKtEJsJD27YgW1R0DgEtwWrdUQrxGYLY8V5iDUdhghrKFOITfenmXFgW/jSF+H3DNEKsdkCAO99IAvSBrFVAAAAAElFTkSuQmCC")
	height 100%
	position fixed
	top 0
	left 0
	width 100%
	z-index -1
.filters
	margin-bottom 15px
.pizza
	margin-bottom 10px
	margin-top 10px
	padding: 10px;
	border: 1px solid rgba(0,0,0,0.3);
	border-radius: 3px;
	.img
	.desc
	.options
		display inline-block
		vertical-align top
	.img 
		flex-shrink 0
		width 177px
	.desc
		width 230px
		padding 0 10px
	.options
		width 170px
		.option 
			margin-top 0
			margin-bottom 20px
			font-size .5em
			float left
			width 49%
			dd
				margin-right 0px
			dt
				margin-right 2px	
			&:first-child
				float none
				font-size 1em
				width 100%
				dt, dd
					margin-right 5px
			&:nth-child(2n)
				margin-right 2%
		.fa
			color $grayColor
		dt, dd
			display inline
			margin-left 0
			margin-right 5px
		.weight
			text-align right
		.size,
		.weight
			width 50%
			float left
		.price
			display block
			text-align center
			font-size 2em
			font-weight bold
			color $accentColor
			i 
				font-size .7em
				color $blackColor
		.relprice
			text-align center
		